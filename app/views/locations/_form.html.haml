= simple_form_for @location do |f|
  -if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  = f.input :latitude
  = f.input :longitude
  %br
  %br
  = f.input :name
  = f.input :description
  = f.input :visible

  .actions
    = f.button :submit
-#= gmaps("markers" => {"data" => @gmap_coordinates}, "map_options" => { "zoom" => 16, "auto_adjust" => true, "auto_zoom" => false})
-#:javascript      

:javascript
  $('#location_name').change( function() {
    $('#location_rooms_name').val(this.selectedIndex);
  } );
  
  $('#location_name').bind('keypress blur', function() {
      $('#location_rooms_name').val($(this).val());
  });
